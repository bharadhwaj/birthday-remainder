<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
		    <h4><a href="<%= new_friend_path %>" class="btn btn-primary">Add new birthday</a></h4>
		    <% if @friends.empty? %>
		    	<center> <h3> Currently you don't have any friends.!!! </h3> </center>
		    <% else %>
				<center> <h3> All friends </h3> </center>
				<div class="table-responsive">
				    <table id="empTable" class="table table-hover">
					    <thead>
					                <tr>
					                  <th> # </th>
					                  <th> Name </th>
					                  <th> Email ID</th>
					                  <th> Date of Birth</th>
					                  <th> Birthday Message </th>
					                  <th></th>
					                  <th></th>
					                </tr>
					    </thead>
					    <tbody>
					    	<% @friends.each do |friend| %>
					            <tr>
					            	<td> <%= friend.id %> </td>
						            <td> <%= friend.name %> </td>
						            <td> <%= friend.email %> </td>
						            <td> <%= friend.dob %> </td>
						            <td> <%= friend.birthday_message[0..16] + "..." %> </td>
						            <td>
						            	<a href="<%= edit_friend_path(friend) %>" class="btn btn-success"> Edit </a>
						            </td>
						            <td>
						            	<%= link_to "Delete", friend, method: :delete, data: { confirm: 'Are you sure you want to remove user ' + friend.name + '?'}, class: "btn btn-danger" %>
						            </td>
					            </tr>
					        <% end %>
					    </tbody>
				  	</table>
				</div>
			<% end %>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
    	$('#empTable').DataTable();
	});
</script>