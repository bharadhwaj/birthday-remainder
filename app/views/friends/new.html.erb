<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-body">
            <%= form_for(@friend) do |f| %>
              <div class="form-group">
                <label> Name </label>
                <input type="text" name="friend[name]"  class="form-control"  placeholder="Enter your name"required >
                
              </div>
              <div class="form-group">
                <label> Email </label>
                <input type="email" name="friend[email]" class="form-control" placeholder="name@example.com" required>
                 
              </div>
              <div class="form-group">
                <label> Your Date of Birth </label>
                <input type="date" name="friend[dob]" class="form-control" placeholder="MM/DD/YYYY" required>
               
              </div>

              <div class="form-group">
                <label> Birthday Message </label>
                <textarea name="friend[birthday_message]" class="form-control" placeholder="Enter your birthday message here."></textarea>
              </div>
              
              <button type="submit" class="btn btn-success" id="submit-button">Register</button>
              <a id ="cancel-button" class="btn btn-warning" href="/">
                  Cancel </a>
            <% end %>

          </div>
        </div>
    </div>
  </div>
</div>